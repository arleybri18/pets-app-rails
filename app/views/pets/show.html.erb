<div class="container col-lg-4 p-4">
<div class="card mb-4 shadow-sm p-2">
          <div class="card-header">
            <h4 class="my-0 font-weight-normal">Hello, I'm a Pet!!</h4>
          </div>
          <div class="card-body">
            <h1 class="text-center"><i class="fas fa-paw"></i></h1>
            <h1 class="card-title pricing-card-title">My name is: <%=@pet.name%>
            <br><small class="text-muted">Breed: <%=@pet.breed%></small></h1>
            <ul class="list-unstyled mt-3 mb-4">
              <li>Age: <%=@pet.age%></li>
              <li>Gender: <%=@pet.gender%></li>
              <li>Size: <%=@pet.size%></li>
            </ul>
            <%= link_to  "Show all pets", "/pets",class:"btn btn-lg btn-block btn-outline-primary" %>
          </div>
        </div>
        </div>